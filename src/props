function formatDate(date) { return date.toLocaleDateString(); }
  

class Comment extends React.Component{
    render(){
        return (
            <div>
                <h3>Hola soy {this.props.author.name}</h3>
                <img src={this.props.author.avatarUrl} />
                <h6>{this.props.text}</h6>
            </div>
        )
    }
}
  
const comment = {
    date: new Date(),
    text: 'I hope you enjoy learning React!',
    author: {
        name: 'Hello Kitty',
        avatarUrl: 'https://placekitten.com/g/64/64',
    },
};

//este componente recibe los datos del objeto comment en la linea 38
ReactDOM.render(
<Comment
    date={comment.date}
    text={comment.text}
    author={comment.author}
/>,
document.getElementById('root')
);